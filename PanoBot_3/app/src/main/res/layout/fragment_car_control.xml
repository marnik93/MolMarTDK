<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdk.panobot_3.Car_control_frag"
    android:id="@+id/carcont_frag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="forward"
            android:id="@+id/button_forw"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="backward"
            android:id="@+id/button_backw"
            android:layout_gravity="left|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PANO"
            android:id="@+id/button_pano_here"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="Left"
            android:id="@+id/butt_left"
            android:layout_gravity="left|center_vertical"
            android:layout_above="@+id/button_backw"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_pano_here" />

        <Button
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="Right"
            android:id="@+id/butt_right"
            android:layout_gravity="right|center_vertical"
            android:layout_above="@+id/button_forw"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="false"
            android:layout_alignTop="@+id/butt_left" />

        <FrameLayout
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/stream_car_fragment_container">
            <include layout="@layout/fragment_view_stream"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="CAR CONTROL_frag" />

            <!--<VideoView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->

        </FrameLayout>
    </RelativeLayout>

</FrameLayout>
